---
import Layout from "@layout"
import "@css/style.css";
import "@css/ai.css";
---

<Layout title="AI">
    <!-- <div class="top-banner"></div> -->
    <div class="ai-container">
        <div class="chat-history">
        </div>
        <div class="main-content">
            <div class="answer-box-container">
                <div class="message-container">
                    <div class="message">
                    <div class="chatgpt-img"><img src="/chatgpt.png" width="33" height="33"></div>
                        <div class="response">Hello! It looks like you just entered "a." Is there something specific you would like to know or discuss? Feel free to ask any questions, and I'll do my best to assist you.</div>
                    </div>
                </div>
            </div>
            <div class="message-box">
            <div class="smaller-box"> <!-- this smaller container box will allow for fixing the distance between the textbox and the enter button -->
                <input id="input" type="text" unselectable="on" placeholder="Send a message" maxlength="500"  />
                <a type="submit" class="send-img">
                    <img src="/send-icon.png"/>
                </a>
            </div>
            </div>
        </div>
    </div>
</Layout>
